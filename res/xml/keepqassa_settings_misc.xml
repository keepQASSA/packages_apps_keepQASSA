<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/misc_title" >

    <PreferenceCategory
        android:title="@string/general_misc_title"
        android:layout="@layout/xd_pref_card_top">

        <!-- Screenshot Sound  -->
        <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
            android:key="screenshot_sound"
            android:layout="@layout/xd_pref_card_mid"
            android:title="@string/screenshot_sound_title"
            android:summary="@string/screenshot_sound_summary"
            android:defaultValue="false" />

        <!-- Gaming Mode -->
        <Preference
            android:key="gaming_mode"
            android:layout="@layout/xd_pref_card_bot"
            android:title="@string/gaming_mode_title"
            android:summary="@string/gaming_mode_summary"
            android:fragment="com.keepqassa.settings.fragments.misc.GamingMode"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="spoof_category"
        android:layout="@layout/xd_pref_card_top"
        android:title="@string/spoof_title"
        settings:allowDividerAbove="false">

        <!-- Unlimited google photos storage -->
        <SwitchPreference
            android:key="use_photos_spoof"
            android:layout="@layout/xd_pref_card_mid"
            android:title="@string/use_photos_spoof_title"
            android:summary="@string/use_photos_spoof_summary"
            android:defaultValue="true" />

        <!-- Unlock FPS for specific games -->
        <SwitchPreference
            android:key="use_games_spoof"
            android:layout="@layout/xd_pref_card_mid"
            android:title="@string/use_games_spoof_title"
            android:summary="@string/use_games_spoof_summary" />

        <!-- Unlock higher quality streams for specific apps -->
        <SwitchPreference
            android:key="use_stream_spoof"
            android:layout="@layout/xd_pref_card_bot"
            android:title="@string/use_stream_spoof_title"
            android:summary="@string/use_stream_spoof_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

</PreferenceScreen>

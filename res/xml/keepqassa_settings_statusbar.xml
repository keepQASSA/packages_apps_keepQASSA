<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title=" " >

    <!-- xd. fake toolbar -->
    <Preference
        android:key="xd_action_bar"
        android:title="@string/statusbar_title"
        android:layout="@layout/xd_action_bar"
        android:selectable="false"/>

    <com.keepqassa.settings.preferences.SystemSettingMasterSwitchPreference
        android:key="network_traffic_state"
        android:title="@string/traffic_title"
        android:summary="@string/traffic_summary"
        android:fragment="com.keepqassa.settings.fragments.statusbar.TrafficIndicators" />

    <!-- Statusbar Ticker -->
    <Preference
        android:key="ticker_settings"
        android:title="@string/ticker_screen_title"
        android:summary="@string/ticker_screen_summary"
        android:fragment="com.keepqassa.settings.fragments.statusbar.Ticker"/>

    <Preference
        android:key="status_bar_lyric"
        android:title="@string/status_bar_lyric_title"
        android:summary="@string/status_bar_lyric_summary"
        android:fragment="com.keepqassa.settings.fragments.statusbar.StatusBarLyric" />

    <Preference
        android:key="misc_signalwifisb"
        android:fragment="com.keepqassa.settings.fragments.statusbar.MiscSignalAndWifiIconSettings"
        android:title="Misc Signal and Wifi Icon Settings"
        android:summary="customize statusbar signal wifi icon settings" />

    <PreferenceCategory
        android:key="status_bar_padding"
        android:layout="@layout/xd_pref_category"
        android:title="@string/statusbar_padding">

        <com.keepqassa.settings.preferences.SystemSettingSeekBarPreference
            android:key="statusbar_top_padding"
            android:title="@string/statusbar_top_padding"
            android:max="50"
            android:min="-5"
            android:defaultValue="-1"/>

        <com.keepqassa.settings.preferences.SystemSettingSeekBarPreference
            android:key="statusbar_left_padding"
            android:title="@string/statusbar_left_padding"
            android:max="50"
            android:min="-5"
            android:defaultValue="-1"/>

        <com.keepqassa.settings.preferences.SystemSettingSeekBarPreference
            android:key="statusbar_right_padding"
            android:title="@string/statusbar_right_padding"
            android:max="50"
            android:min="-5"
            android:defaultValue="-1"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/status_bar_icons_title"
        android:layout="@layout/xd_pref_category">

        <PreferenceScreen
            android:key="status_bar_icons"
            android:title="@string/status_bar_system_icons_title"
            android:summary="@string/status_bar_system_icons_summary">
            <intent android:action="com.android.settings.action.STATUS_BAR_TUNER" />
        </PreferenceScreen>

        <PreferenceScreen
            android:key="signal_icons"
            android:title="@string/signalicons_title"
            android:summary="@string/signalicons_summary"
            android:fragment="com.keepqassa.settings.fragments.statusbar.SignalIcons" />

        <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
            android:key="statusbar_dual_row"
            android:title="@string/statusbar_dual_row_title"
            android:summary="@string/statusbar_dual_row_summary"
            android:defaultValue="false" />

	<com.keepqassa.settings.preferences.SystemSettingSwitchPreference
            android:key="statusbar_icons_style"
            android:title="@string/statusbar_icons_style"
            android:summary="@string/statusbar_icons_style_summary"
            android:defaultValue="true" />

        <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
            android:key="bluetooth_show_battery"
            android:title="@string/bluetooth_battery_title"
            android:summary="@string/bluetooth_battery_summary"
            android:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="status_bar_clock_key"
        android:layout="@layout/xd_pref_category"
        android:title="@string/status_bar_clock_title">

        <com.keepqassa.settings.preferences.SystemSettingListPreference
            android:key="status_bar_clock"
            android:title="@string/status_bar_clock_position_title"
            android:summary="%s"
            android:dialogTitle="@string/status_bar_clock_position_title"
            android:entries="@array/status_bar_clock_position_entries"
            android:entryValues="@array/status_bar_clock_position_values"
            android:defaultValue="2" />

        <Preference
            android:key="clock"
            android:title="@string/status_bar_clock_title"
            android:summary="@string/status_bar_clock_summary"
            android:fragment="com.keepqassa.settings.fragments.statusbar.Clock" />
    </PreferenceCategory>

</PreferenceScreen>

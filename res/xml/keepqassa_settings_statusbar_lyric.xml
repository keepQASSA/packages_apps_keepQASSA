<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title=" ">

    <!-- xd. fake toolbar -->
    <Preference
        android:key="xd_action_bar"
        android:title="@string/status_bar_lyric_title"
        android:layout="@layout/xd_action_bar"
        android:selectable="false"/>

    <!-- Statusbar Lyric -->
    <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
        android:key="status_bar_show_lyric"
        android:title="@string/status_bar_show_lyric_title"
        android:summary="@string/status_bar_show_lyric_summary"
        android:defaultValue="false" />

    <PreferenceCategory
        android:title="@string/status_bar_lyric_options_title"
        android:layout="@layout/xd_pref_category">

        <com.keepqassa.settings.preferences.SystemPropertySwitchPreference
            android:key="persist.sys.disguise_props_for_music_app"
            android:title="@string/disguise_props_for_music_app_title"
            android:summary="@string/disguise_props_for_music_app_summary"
            android:dependency="status_bar_show_lyric"
            android:defaultValue="false"/>

        <PreferenceScreen
            android:key="status_bar_lyric_app"
            android:title="@string/status_bar_lyric_app_title"
            android:summary="@string/status_bar_lyric_app_summary"
            android:dependency="status_bar_show_lyric">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="io.cjybyjk.statuslyricext"
                    android:targetClass="io.cjybyjk.statuslyricext.SettingsActivity" />
    </PreferenceScreen>

    </PreferenceCategory>

</PreferenceScreen>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/notifications_title">

    <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
        android:key="status_bar_notif_count"
        android:title="@string/status_bar_notif_count_title"
        android:summary="@string/status_bar_notif_count_summary"
        android:defaultValue="false" />

    <PreferenceCategory
        android:title="@string/general_notifications_title">

        <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
            android:key="force_expanded_notifications"
            android:title="@string/force_expanded_notifications_title"
            android:summary="@string/force_expanded_notifications_summary"
            android:defaultValue="false" />

        <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
            android:key="hide_smart_replies"
            android:title="@string/hide_smart_replies_title"
            android:summary="@string/hide_smart_replies_summary"
            android:defaultValue="false"/>

        <!-- Toast Icon -->
        <com.keepqassa.settings.preferences.GlobalSettingSwitchPreference
            android:key="toast_icon"
            android:title="@string/toast_icon_title"
            android:summary="@string/toast_icon_summary"
            android:defaultValue="true" />

       <!-- Clipboard toast info -->
       <com.keepqassa.settings.preferences.SystemSettingListPreference
            android:key="clipboard_toast_info"
            android:title="@string/clipboard_toast_info_title"
            android:entries="@array/clipboard_toast_info_entries"
            android:entryValues="@array/clipboard_toast_info_values"
            android:defaultValue="0" />

        <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
            android:key="notification_guts_kill_app_button"
            android:title="@string/notification_guts_kill_app_button_title"
            android:summary="@string/notification_guts_kill_app_button_summary"
            android:defaultValue="false" />

   </PreferenceCategory>

   <PreferenceCategory
        android:title="@string/heads_up_cat_title"
        android:key="notifs_headsup">

        <com.keepqassa.settings.preferences.GlobalSettingSwitchPreference
            android:key="heads_up_notifications_enabled"
            android:title="@string/heads_up_title"
            android:summaryOn="@string/heads_up_summary_enabled"
            android:summaryOff="@string/heads_up_summary_disabled"
            android:defaultValue="true" />

        <Preference
            android:key="heads_up_settings"
            android:title="@string/heads_up_cat_title"
            android:summary="@string/heads_up_cat_summary"
            android:dependency="heads_up_notifications_enabled"
            android:fragment="com.keepqassa.settings.fragments.notifications.HeadsUpSettings" />

    </PreferenceCategory>

</PreferenceScreen>

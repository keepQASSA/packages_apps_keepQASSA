<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/battery_title" >

    <!-- Battery bar -->
    <com.keepqassa.settings.preferences.SystemSettingMasterSwitchPreference
        android:key="statusbar_battery_bar"
        android:title="@string/battery_bar_title"
        android:summary="@string/battery_bar_summary"
        android:fragment="com.keepqassa.settings.fragments.battery.BatteryBar" />

    <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
        android:key="battery_level_colors"
        android:title="@string/battery_level_colors_title"
        android:summary="@string/battery_level_colors_summary"
        android:defaultValue="false" />

    <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
        android:key="charging_animator"
        android:title="@string/charging_animator_title"
        android:summary="@string/charging_animator_summary"
        android:defaultValue="true" />

    <PreferenceCategory
        android:title="@string/battery_sb_title">

        <!-- Battery styles -->
        <com.keepqassa.settings.preferences.SystemSettingListPreference
            android:key="status_bar_battery_style"
            android:title="@string/status_bar_battery_style_title"
            android:summary="%s"
            android:dialogTitle="@string/status_bar_battery_style_title"
            android:entries="@array/status_bar_battery_style_entries"
            android:entryValues="@array/status_bar_battery_style_values"
            android:defaultValue="12" />

        <!-- Show Battery percent on Statusbar -->
        <com.keepqassa.settings.preferences.SystemSettingListPreference
            android:key="status_bar_show_battery_percent"
            android:title="@string/battery_percentage_title"
            android:entries="@array/battery_percentage_entries"
            android:entryValues="@array/battery_percentage_values"
            android:defaultValue="0" />

        <!-- Show battery percent when charging -->
        <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
            android:key="status_bar_battery_text_charging"
            android:title="@string/status_bar_battery_text_charging_title"
            android:summary="@string/status_bar_battery_text_charging_summary"
            android:defaultValue="true" />

        <!-- Show battery percent when charging -->
        <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
            android:key="show_battery_symbol"
            android:title="@string/show_battery_symbol_title"
            android:summary="@string/show_battery_symbol_summary"
            android:dependency="status_bar_battery_text_charging"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/battery_qs_title">

        <!-- Battery styles -->
        <com.keepqassa.settings.preferences.SystemSettingListPreference
            android:key="qs_battery_style"
            android:title="@string/status_bar_battery_style_title"
            android:dialogTitle="@string/status_bar_battery_style_title"
            android:entries="@array/qs_battery_style_entries"
            android:entryValues="@array/qs_battery_style_values"
            android:defaultValue="-1" />

        <!-- Battery location -->
        <com.keepqassa.settings.preferences.SystemSettingListPreference
            android:key="qs_battery_location"
            android:title="@string/qs_battery_location_title"
            android:dialogTitle="@string/qs_battery_location_title"
            android:entries="@array/qs_battery_location_entries"
            android:entryValues="@array/qs_battery_location_values"
            android:defaultValue="0" />

        <!-- Battery mode -->
        <com.keepqassa.settings.preferences.SystemSettingListPreference
            android:key="qs_show_battery_percent"
            android:title="@string/battery_percentage_title"
            android:entries="@array/battery_percentage_entries"
            android:entryValues="@array/battery_percentage_values"
            android:defaultValue="2" />

        <!-- Battery estimate -->
        <com.keepqassa.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_show_battery_estimate"
            android:title="@string/battery_estimate_title"
            android:summary="@string/battery_estimate_summary"
            android:defaultValue="0" />

    </PreferenceCategory>

</PreferenceScreen>
